{
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^@/context/(.*)$",
    "^@/recoils/(.*)$",
    "^@/layouts/(.*)$",
    "^@/components/(.*)$",
    "^@/server/(.*)$",
    "^@/apis/(.*)$",
    "^@/utils/(.*)$",
    "^@/mock/(.*)$",
    "^@/"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "printWidth": 120,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "quoteProps": "as-needed",
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "endOfLine": "lf"
}
